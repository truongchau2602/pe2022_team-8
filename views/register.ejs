<!DOCTYPE html>
<html lang="en">
    <%- include("layouts/header"); -%>
<body>
    <header>
        <%- include('layouts/navbar'); -%>
    </header>

        
        <div class='Register'>
            <!-- <Helmet>
                <script src="../../javascripts/RegisterScript.js"></script>
            </Helmet>y -->
            <div class='Register-wrapper'>
                <div class = "form__title">
                    <h1>Register</h1>
                </div>
                <div class="form__message"></div>
                <div class = "form__input-group">
                    <input type="text" id="username" class="form__input" placeholder="Username" />
                    <div class='form__input-error--message '></div>
                    <input type="email" id="email" class="form__input" placeholder="Email" />
                    <div class='form__input-error--message '></div>
                    <input type="password" id="password" class="form__input" placeholder="Password" />
                    <div class='form__input-error--message '></div>
                    <input type="password" id="confirmpassword" class="form__input" placeholder="Confirm Password" />
                    <div class='form__input-error--message' id="alert"></div>
                </div>
                <button type="submit" class = "form__button">Submit</button>
                <p class="form__text">
                    <a class="form__link" href="./login" id="linkLogin">Already have an account? Login here.</a>
                </p>
            </div>
        </div>
    
       
   
    <%- include('layouts/footer'); -%>
    <%- include('layouts/scripts'); -%>

</body>
</html>




